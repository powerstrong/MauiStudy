<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiStudy.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid ColumnDefinitions=".25*, .75*" RowDefinitions="100, auto, *">
        <Image
            Grid.ColumnSpan="2"
            Background="orange"
            Source="dotnet_bot.png" />
        <Label Text="asdf" />
        <StackLayout Grid.Row="1" HorizontalOptions="Center">
            <Label
                Grid.Row="1"
                HeightRequest="50"
                Text="first thing" />
            <Label
                Grid.Row="1"
                HeightRequest="50"
                Text="second thing" />
            <Label
                Grid.Row="1"
                HeightRequest="50"
                Text="third thing" />
        </StackLayout>
        <StackLayout Grid.Row="1" Grid.Column="1">
            <Button
                Background="pink"
                HeightRequest="50"
                Text="Start"
                TextColor="Yellow" />
            <Button
                Background="lightgreen"
                HeightRequest="50"
                Text="Stop" />
            <Button
                Background="lightblue"
                HeightRequest="50"
                Text="Pause" />
        </StackLayout>
    </Grid>

</ContentPage>
